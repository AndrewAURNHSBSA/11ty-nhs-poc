{% block bodyEnd %}
  {% block scripts %}
    <script src="/javascripts/nhsuk-frontend.js"></script>
    <script src="/javascripts/application.js"></script>
    {% block pageScripts %}{% endblock %}
  {% endblock %}
{% endblock %}
